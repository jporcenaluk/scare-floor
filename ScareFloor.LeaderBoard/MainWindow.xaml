<Window x:Class="ScareFloor.LeaderBoard.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ScareFloor.LeaderBoard"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <TextBlock Foreground="#FF6EA6DA" FontFamily="Monster AG" FontSize="36">leader board</TextBlock>
        <TextBlock Name="LeaderboardValue" FontSize="172" Foreground="#FF6EA6DA" HorizontalAlignment="Center" Margin="0" FontFamily="Abril Fatface">0</TextBlock>
        <Button Content="reset" Click="Reset" FontFamily="Monster AG" Margin="0" Padding="10,3" HorizontalAlignment="Center" Background="#FF6EA6DA" BorderBrush="#FF6EA6DA" Foreground="White" FontSize="20"/>
    </StackPanel>
</Window>
